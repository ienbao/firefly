<AnchorPane minHeight="200.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dmsoft.firefly.plugin.yield.controller.YieldChartResultController">
    <children>
        <HBox minHeight="245.0" maxHeight="245.0"  style="-fx-border-color: #f0f0f0;-fx-border-width: 0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"  SplitPane.resizableWithParent="true">
            <SplitPane minWidth="400" prefWidth="425">
                <TabPane prefHeight="245.0" tabClosingPolicy="UNAVAILABLE" tabMaxWidth="100.0" tabMinWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" SplitPane.resizableWithParent="true">
                    <tabs>
                        <Tab fx:id="boxTab" closable="false">
                                <graphic>
                                    <Group>
                                        <children>
                                            <Label styleClass="tab-graphic-label" text="Total Processes" textAlignment="CENTER"/>
                                        </children>
                                    </Group>
                                </graphic>
                            <content>
                                <HBox >
                                    <VBox fx:id="BarChart" style="-fx-padding: 20 0 0 0 " VBox.vgrow="ALWAYS" minHeight="187.0" minWidth="200" maxWidth="200" alignment="CENTER">
                                        <BarChart fx:id="yieldBarChart" minWidth="180.0" minHeight="187.0" maxWidth="200"
                                                  horizontalGridLinesVisible="false" verticalGridLinesVisible="false"
                                                  horizontalZeroLineVisible="false" legendVisible="false"
                                                  style="-fx-background-color: #ffffff; -fx-column-halignment: 1px;-fx-row-valignment: 1px"
                                                  verticalZeroLineVisible="false">
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" tickLabelGap="10.0" tickMarkVisible="false"/>
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis tickUnit="33.33" autoRanging="false" minorTickVisible="false" side="LEFT" tickLabelsVisible="false" tickMarkVisible="false"/>
                                            </yAxis>
                                            <VBox.margin>
                                                <Insets bottom="0" right="0" top="0"/>
                                            </VBox.margin>
                                        </BarChart>
                                    </VBox>
                                    <VBox style="-fx-background-color: #FAFAFA;"  VBox.vgrow="ALWAYS" minHeight="220" maxHeight="220" alignment="CENTER">
                                        <fx:include fx:id="yieldResultData" source="yield_result_data.fxml"/>
                                    </VBox>
                                </HBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </SplitPane>

            <VBox maxHeight="244.0" minHeight="244.0" alignment="CENTER_LEFT" style="-fx-spacing: 20 " AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"  SplitPane.resizableWithParent="true">
                <TabPane maxHeight="244.0" minHeight="244.0" tabClosingPolicy="UNAVAILABLE"  prefWidth="880.0" maxWidth="1000" >
                    <tabs>
                        <Tab fx:id="ndTab" closable="false">
                            <graphic>
                                <Group>
                                    <children>
                                        <Label styleClass="tab-graphic-label" text="\%NTF Chart" textAlignment="CENTER"/>
                                    </children>
                                </Group>
                            </graphic>
                            <content>
                                <VBox maxHeight="244.0" minHeight="244.0" alignment="TOP_CENTER" style="-fx-spacing:20;">
                                    <HBox maxHeight="27" minHeight="27" style="-fx-border-width:0 0 1 0;-fx-border-color:#F0F0F0;-fx-spacing: 20;-fx-padding: 2 0 2 15" alignment="CENTER_LEFT" >
                                        <Label maxHeight="22" maxWidth="90.0" minHeight="22" minWidth="90.0" prefWidth="90.0"
                                               text="%NTF_TOP_N">
                                        </Label>
                                        <ComboBox fx:id="resultNTFNum" maxHeight="22" maxWidth="120.0" minHeight="22" minWidth="80.0" prefWidth="120.0" />
                                    </HBox>
                                    <VBox maxHeight="165" minHeight="165" alignment="CENTER" style="-fx-padding:0 5 0 0;-fx-border-width: 0">
                                        <BarChart fx:id="yieldbarChartItem" horizontalZeroLineVisible="false" horizontalGridLinesVisible="false"
                                                  legendVisible="false" prefHeight="400.0" prefWidth="850.0" maxWidth="850" VBox.vgrow="ALWAYS"
                                                  verticalZeroLineVisible="false" verticalGridLinesVisible="false"
                                                  style="-fx-stroke-width: 10px" >
                                            <xAxis>
                                                <CategoryAxis side="BOTTOM" tickLabelGap="10.0" tickMarkVisible="false" />
                                            </xAxis>
                                            <yAxis>
                                                <NumberAxis tickUnit="33.33" autoRanging="false" minorTickVisible="false" side="LEFT" tickLabelsVisible="false" tickMarkVisible="false"/>
                                            </yAxis>
                                        </BarChart>
                                    </VBox>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
