<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>bin</id>

    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>

            <includes>
                <include>com.dmsoft:dap-csv-resolver</include>
                <include>com.dmsoft:dap-spc</include>
                <include>com.dmsoft:dap-grr</include>
            </includes>
            <binaries>
                <outputDirectory>Plugins/${module.artifactId}/libs</outputDirectory>
                <!--<outputFileNameMapping>${module.artifactId}-${module.version}-${module.classifier}.${module.extension}</outputFileNameMapping>-->
                <unpack>false</unpack>
                <excludes>
                    <exclude>com.dmsoft:dap-sdk</exclude>
                    <exclude>com.dmsoft:bamboo</exclude>
                </excludes>
            </binaries>

            <sources>
                <includeModuleDirectory>false</includeModuleDirectory>
                <fileSets>
                    <fileSet>
                        <directory>${project.basedir}/src/main/resources/</directory>
                        <outputDirectory>/Plugins/${module.artifactId}/</outputDirectory>
                        <includes>
                            <include>plugin.xml</include>
                        </includes>
                    </fileSet>
                    <fileSet>
                        <directory>${project.basedir}/src/main/resources/rscripts</directory>
                        <outputDirectory>/Plugins/${module.artifactId}/rscripts</outputDirectory>
                        <includes>
                            <include>*.R</include>
                        </includes>
                    </fileSet>
                </fileSets>
            </sources>
        </moduleSet>
    </moduleSets>
</assembly>