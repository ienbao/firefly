<?xml version="1.0" encoding="UTF-8"?>

<?import com.dmsoft.firefly.gui.components.utils.TextFieldFilter?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dmsoft.firefly.plugin.spc.controller.StatisticalResultController">
    <TabPane tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="%STATISTICAL_RESULT">
                <VBox>
                    <HBox styleClass="spc-result-filter">
                        <TextFieldFilter fx:id="filterTestItemTf" styleClass="spc-result-filter-text"/>
                        <Button fx:id="chooseColumnBtn" styleClass="btn-icon" maxHeight="22.0" maxWidth="22.0" minWidth="22.0" prefHeight="22.0" prefWidth="22.0" />
                    </HBox>
                    <TableView fx:id="statisticalResultTb" editable="true" styleClass="spc-result-table" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS"/>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>
</VBox>
