<AnchorPane fx:id="loginPane" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dmsoft.firefly.gui.controller.LoginController">
   <children>
      <VBox>
         <children>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="230.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="60.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="49.0" valignment="CENTER" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="46.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="46.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="46.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="userNameTxt" style="-fx-pref-height: 26; -fx-min-height: 26;" text="admin" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="loginBtn" alignment="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="230.0" styleClass="btn-primary" text="%LOGIN_BTN" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <ImageView fx:id="loginImageView" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets bottom="15.0" />
                     </GridPane.margin></ImageView>
                  <PasswordField fx:id="passwordField" text="123456" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </GridPane>
            <HBox fx:id="loginFailHbox" alignment="CENTER_LEFT" maxWidth="350.0" minWidth="350.0" prefWidth="350.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
