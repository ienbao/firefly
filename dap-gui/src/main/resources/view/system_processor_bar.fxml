<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dmsoft.firefly.gui.SystemProcessorController">
    <children>
        <AnchorPane fx:id="systemProcessBar" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                    AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox alignment="CENTER" maxWidth="520.0" minWidth="520.0" prefHeight="170.0" prefWidth="520.0"
                      style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="10.0"
                      AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <children>
                        <ImageView fx:id="imageViewLogo" fitHeight="90.0" fitWidth="100.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <HBox.margin>
                                <Insets left="40.0" right="40.0"/>
                            </HBox.margin>
                        </ImageView>
                        <GridPane maxWidth="360.0" minWidth="360.0" prefWidth="360.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="12.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="20.0" valignment="CENTER"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label styleClass="login-label-lg" text="%GLOBAL_SYSTEM_PROCESS_TITLE"
                                       GridPane.rowIndex="1">
                                    <font>
                                        <Font name="Arial" size="28.0"/>
                                    </font>
                                </Label>
                                <Label styleClass="login-label-md" text="%GLOBAL_SYSTEM_PROCESS_NAME"
                                       GridPane.rowIndex="2">
                                    <font>
                                        <Font name="Arial" size="22.0"/>
                                    </font>
                                </Label>
                                <ProgressBar fx:id="progressBar" maxHeight="2.0" maxWidth="350.0" minHeight="2.0"
                                             minWidth="350.0" prefHeight="2.0" prefWidth="350.0" progress="0.45"
                                             GridPane.rowIndex="3"/>
                                <Label prefHeight="16.0" prefWidth="360.0" text="%GLOBAL_SYSTEM_PROCESS_INIT"
                                       GridPane.rowIndex="4">
                                    <font>
                                        <Font name="Arial" size="12.0"/>
                                    </font>
                                </Label>
                                <Label alignment="CENTER_RIGHT" prefHeight="15.0" prefWidth="350.0"
                                       text="%STATE_BAR_VERSION" GridPane.rowIndex="5">
                                    <font>
                                        <Font name="Arial" size="12.0"/>
                                    </font>
                                </Label>
                            </children>
                        </GridPane>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
