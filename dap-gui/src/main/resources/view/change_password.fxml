<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dmsoft.firefly.gui.controller.ChangePasswordController">
   <children>
      <VBox AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="130.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="160.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="30.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="%CHANGE_PASSWORD_OLD" />
                  <Label text="%CHANGE_PASSWORD_NEW" GridPane.rowIndex="1" />
                  <Label text="%CHANGE_PASSWORD_CONFIRM" GridPane.rowIndex="2" />
                  <PasswordField fx:id="txtOldPassword" styleClass="text-field-error" GridPane.columnIndex="2" />
                  <PasswordField fx:id="txtNewPassword" styleClass="text-field-error" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <PasswordField fx:id="txtConfirmPassword" styleClass="text-field-error" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               </children>
               <VBox.margin>
                  <Insets bottom="45.0" top="15.0" />
               </VBox.margin>
            </GridPane>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="btnOK" alignment="CENTER" mnemonicParsing="false" prefHeight="22.0" prefWidth="80.0" text="OK" />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
